@{
    ViewData["Title"] = "Bb";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <title></title>
</head>
<body>
		
        <input type="text" id="sometext"/>
		<button onclick="submit()">Post with jQuery Ajax</button>
		<div class="textinput">
            <div id="elem">placeholder</div>
		</div>
		
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>      
	    <script type="text/javascript" src="~/scripts/basefile.js"></script>

		<script>
            function submit(){
                var formData = {
                    sometext: $('#sometext').val()    
			    };
			    $.ajax({
                    data: formData,
			        type: 'GET',
			        url: 'Text',
			        success: function(response){
                        console.log(response);
			            basefile.drawWord('elem', formData.sometext);
			        },
			        error: function (xhr, errorType, exception){
			        }
			    });
			};
		</script>
</body>
</html>
